@model lab5.Services.Auth0User
@{
    ViewData["Title"] = "Профіль користувача";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Ім'я користувача:</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Повне ім'я:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Телефон:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
                @if (!string.IsNullOrEmpty(Model.Picture))
                {
                    <div class="col-md-4 text-center">
                        <img src="@Model.Picture" alt="Profile" class="rounded-circle img-thumbnail" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>