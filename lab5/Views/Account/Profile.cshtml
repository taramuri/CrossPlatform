@model lab5.Services.Auth0User
@{
    ViewData["Title"] = "Профіль користувача";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8">
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Лабораторна робота №5</h1>
        </header>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold mb-6">Профіль користувача</h2>
            <div class="flex flex-col md:flex-row">
                <div class="w-full md:w-2/3 pr-4">
                    <dl class="space-y-4">
                        <div class="flex">
                            <dt class="w-1/3 font-bold text-gray-700">Ім'я користувача:</dt>
                            <dd class="w-2/3">@Model.Username</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/3 font-bold text-gray-700">Повне ім'я:</dt>
                            <dd class="w-2/3">@Model.FullName</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/3 font-bold text-gray-700">Email:</dt>
                            <dd class="w-2/3">@Model.Email</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/3 font-bold text-gray-700">Телефон:</dt>
                            <dd class="w-2/3">@Model.Phone</dd>
                        </div>
                    </dl>
                </div>
                @if (!string.IsNullOrEmpty(Model.Picture))
                {
                    <div class="w-full md:w-1/3 flex justify-center items-center mt-4 md:mt-0">
                        <img src="@Model.Picture" alt="Profile Picture" class="rounded-full w-48 h-48 object-cover border-4 border-gray-300" />
                    </div>
                }
            </div>
        </div>

    </div>
</body>
</html>