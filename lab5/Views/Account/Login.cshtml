@model LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold mb-6 text-center">Вхід</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 mb-2">Email:</label>
                <input asp-for="Email" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 mb-2">Пароль:</label>
                <input asp-for="Password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label class="inline-flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="form-checkbox" />
                    <span class="ml-2">Запам'ятати мене</span>
                </label>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition-colors">
                Увійти
            </button>
        </form>

        <div class="mt-4 text-center">
            <p>
                Немає облікового запису?
                <a asp-action="Register" class="text-blue-500 hover:text-blue-700">Зареєструватися</a>
            </p>
        </div>
    </div>
</div>