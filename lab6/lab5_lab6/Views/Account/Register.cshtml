@model RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto py-8">
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Лабораторна робота №5</h1>
        </header>

        <section class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Реєстрація нового користувача</h2>

            <form asp-action="Register" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700">
                        Ім'я користувача
                    </label>
                    <div class="mt-1">
                        <input asp-for="Username"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="Введіть унікальне ім'я користувача" />
                    </div>
                    <span asp-validation-for="Username" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700">
                        ПІБ
                    </label>
                    <div class="mt-1">
                        <input asp-for="FullName"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="Прізвище Ім'я По батькові" />
                    </div>
                    <span asp-validation-for="FullName" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">
                        Пароль
                    </label>
                    <div class="mt-1">
                        <input asp-for="Password" type="password"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="Мінімум 8 символів" />
                    </div>
                    <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                        Підтвердження паролю
                    </label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" type="password"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="Повторіть пароль" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700">
                        Телефон
                    </label>
                    <div class="mt-1">
                        <input asp-for="Phone"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="+380XXXXXXXXX" />
                    </div>
                    <span asp-validation-for="Phone" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                        Email
                    </label>
                    <div class="mt-1">
                        <input asp-for="Email"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                               placeholder="email@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Зареєструватися
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <span class="text-gray-500">
                    Вже зареєстровані? <a href="@Url.Action("Login", "Account")" class="font-medium text-indigo-600 hover:text-indigo-500">Увійти</a>
                </span>
            </div>
        </section>
    </div>
</body>
</html>